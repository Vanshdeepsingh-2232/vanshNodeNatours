//- header
//- Class names with dots
header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All Tours
    .header__logo
        img(src='/img/logo-white.png', alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href='http://127.0.0.1:8000/api/v1/users/logout') Log Out  
            a.nav__el(href='/me')
                img(src=`img/users/${user.photo}` alt='User photo' class='nav__user-img')
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Login
            a.nav__el.nav__el--cta(href='/signup') SignUp 